[commit]
#    template = ~/.gitmessage
[cola]
	spellcheck = false
	startupmode = list
[http "https://github.com"]
	proxy = socks5h://127.0.0.1:7890
[http "https://gitlab.com"]
	proxy = socks5h://127.0.0.1:7890
[init]
	defaultBranch = main
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
[core]
	editor = vim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	line-numbers = true
#	side-by-side = true
[merge]
	conflictstyle = diff3
	tool = xxdiff
[diff]
	colorMoved = default
	tool = kdiff3
[gui]
	editor = kate
	historybrowser = gitk
